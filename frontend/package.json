{
  "name": "lunareclipse-frontend",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "tsc && vite build",
    "build:clean": "npm run clean && npm run build",
    "build:analyze": "cross-env ANALYZE=true npm run dev",
    "build:storybook": "storybook build -o build/storybook",
    "clean": "rimraf ./build",
    "dev": "vite",
    "dev:clean": "rimraf package-lock.json node_modules && npm install && npm run dev",
    "format": "prettier --write .",
    "format:check": "prettier --cache --check .",
    "i18n:update": "i18next-resources-for-ts interface -i ./public/i18n/en -o ./src/types/i18next.resources.d.ts",
    "lint": "eslint .",
    "preview": "vite preview",
    "size:check": "npm run build && size-limit --why",
    "storybook": "storybook dev -p 6006",
    "tsc:check": "tsc",
    "test": "vitest --watch",
    "test:all": "npm-run-all --parallel tsc:check test lint format:check",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.1.0",
    "@radix-ui/react-toast": "^1.1.5",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "i18next": "^23.9.0",
    "i18next-browser-languagedetector": "7.2.2",
    "i18next-http-backend": "^3.0.2",
    "i18next-resources-to-backend": "^1.2.0",
    "lucide-react": "^0.379.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^14.0.5",
    "react-router-dom": "^6.18.0",
    "simplex-noise": "^4.0.3",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7",
    "tslog": "^4.8.4-0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@nkzw/eslint-config": "^1.10.0",
    "@size-limit/file": "^11.0.1",
    "@size-limit/webpack": "^11.0.1",
    "@size-limit/webpack-why": "^11.0.1",
    "@tailwindcss/typography": "^0.5.10",
    "@testing-library/react": "^14.2.1",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "i18next-resources-for-ts": "1.5.0",
    "jsdom": "^24.0.0",
    "msw": "^2.2.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.10",
    "rimraf": "^5.0.5",
    "size-limit": "^11.0.1",
    "storybook": "^8.0.2",
    "tailwindcss": "^3.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-svgr": "^4.2.0",
    "vitest": "^1.6.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "Chrome 118",
      "last 1 chrome version",
      "last 1 edge version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "size-limit": [
    {
      "path": "build/server/*.js",
      "limit": "60 kB"
    },
    {
      "path": "build/server/app/*.js",
      "limit": "10 kB"
    }
  ],
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
